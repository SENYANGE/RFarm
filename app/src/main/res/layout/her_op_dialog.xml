<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/herd_op_sale"
        android:layout_width="210dp"
        android:layout_height="61dp"
        android:layout_marginTop="196dp"
        android:drawableLeft="@mipmap/money"
        android:text="Sale"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/herd_op_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="22dp"
        android:drawableLeft="@drawable/ic_baseline_edit_24"
        android:drawablePadding="10dp"
        android:text="Update Details"
        app:layout_constraintBottom_toTopOf="@+id/herd_op_history"
        app:layout_constraintStart_toStartOf="@+id/herd_op_sale"
        app:layout_constraintTop_toBottomOf="@+id/herd_op_sale" />

    <Button
        android:id="@+id/herd_op_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:drawableLeft="@drawable/ic_baseline_history_edu_24"
        android:drawablePadding="10dp"
        android:text="Birth History"
        app:layout_constraintBottom_toTopOf="@+id/herd_op_delete"
        app:layout_constraintStart_toStartOf="@+id/herd_op_update"
        app:layout_constraintTop_toBottomOf="@+id/herd_op_update" />

    <Button
        android:id="@+id/herd_op_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="191dp"
        android:drawableLeft="@drawable/ic_baseline_delete_24"
        android:drawablePadding="10dp"
        android:text="Delete Rabbit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/herd_op_history"
        app:layout_constraintTop_toBottomOf="@+id/herd_op_history" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="45dp"
        android:text="Rabbit Options"
        android:textColor="@color/blue"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/herd_op_sale"
        app:layout_constraintStart_toStartOf="@+id/herd_op_sale"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="121dp"
        android:layout_height="0dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/app_log" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="38dp"
        android:drawableLeft="@drawable/ic_baseline_cancel_24"
        android:drawablePadding="10dp"
        android:text="Cancle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/herd_op_sale"
        app:layout_constraintVertical_bias="0.957" />
</androidx.constraintlayout.widget.ConstraintLayout>