<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rabiit1">

    <ImageView
        android:id="@+id/update_imageView13"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="107dp"
        app:layout_constraintBottom_toTopOf="@+id/update_textInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007"
        app:srcCompat="@mipmap/app_log" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/update_doer_pic"
        android:layout_width="173dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bunny1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/update_textInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/update_textInputLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_imageView13">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/update_rab_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rabbit Tag/Name"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/blue"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/update_textInputLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toTopOf="@+id/update_linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_textInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/update_rab_breed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Breed Type"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/blue"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/update_linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="338dp"
        android:layout_marginBottom="216dp"
        android:background="@color/purple_200"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/update_cancle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/update_sex_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"

            android:drawableRight="@mipmap/male_icon"
            android:onClick="onSexCheckboxClicked"
            android:paddingLeft="20dp"

            android:text="Buck"
            android:textColor="@color/blue"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="13dp"
            tools:layout_editor_absoluteY="349dp" />

        <CheckBox
            android:id="@+id/update_sex_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/female_icon"
            android:onClick="onSexCheckboxClicked"
            android:text="Doer"
            android:textColor="@color/blue"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="329dp"
            tools:layout_editor_absoluteY="349dp" />
    </LinearLayout>

    <Button
        android:id="@+id/update_save_rabbit"
        android:layout_width="194dp"
        android:layout_height="51dp"
        android:layout_marginTop="174dp"
        android:layout_marginBottom="171dp"
        android:background="@drawable/circular_btn"
        android:elevation="20dp"
        android:ellipsize="start"
        android:text="Update Rabbit Details"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/update_linearLayout"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/update_rabbit_image"
        android:layout_width="71dp"
        android:layout_height="0dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="181dp"
        android:backgroundTint="@color/blue"
        android:clickable="true"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/update_linearLayout"
        app:layout_constraintEnd_toEndOf="@+id/update_textInputLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/camera" />

    <Button
        android:id="@+id/update_cancle"
        android:layout_width="103dp"
        android:layout_height="45dp"
        android:layout_marginBottom="61dp"
        android:background="@color/browser_actions_bg_grey"
        android:drawableLeft="@drawable/ic_baseline_cancel_24"
        android:drawablePadding="10dp"
        android:elevation="5dp"
        android:text="Cancel"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.891"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_linearLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>